#!/usr/bin/env bash

set -Eeuo pipefail


wget -O- -q -T 1 -t 1 https://github.com/adoptium/temurin11-binaries/releases/download/jdk-11.0.16.1%2B1/OpenJDK11U-jdk_x64_linux_hotspot_11.0.16.1_1.tar.gz
wget -O- -q -T 1 -t 1 https://github.com/adoptium/temurin11-binaries/releases/download/jdk-11.0.16.1%2B1/OpenJDK11U-jdk_x64_linux_hotspot_11.0.16.1_1.tar.gz.sha256.txt | sha256sum -c

tar xzf OpenJDK11U-jdk_x64_linux_hotspot_11.0.16.1_1.tar.gz

export PATH=$PWD/OpenJDK11U-jdk_x64_linux_hotspot_11.0.16.1_1/bin:$PATH

java -version

yarn --prod run clean
yarn --prod run html
yarn --prod run compile-css
yarn --prod run compile-js
